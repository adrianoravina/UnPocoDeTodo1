<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ravin.unpocodetodo1.MainActivity">

    <TextView
        android:id="@+id/tvSeleccionados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Strains seleccionados: "
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stoned Gypsy Online Weed Shop! "
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/btnMostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Compra"
        android:layout_gravity="center"
        android:onClick="mostrar"/>

    <TextView
        android:id="@+id/tvTop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Top Strains!"
            android:textSize="20sp"
            android:textStyle="bold"
        android:background="#98FF72"
        android:textColor="#FFFFFF"/>

    <ListView
        android:id="@+id/lvTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </ListView>






</LinearLayout>
